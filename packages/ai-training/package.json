{
  "name": "@russian-bank/ai-training",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "train": "npx tsx src/scripts/train.ts",
    "train:weekend": "npx tsx src/scripts/train.ts -g 500 -p 100 -G 50",
    "train:overnight": "npx tsx src/scripts/overnight-train.ts --overnight -v",
    "train:quick": "npx tsx src/scripts/overnight-train.ts --quick -v",
    "train:evolve": "npx tsx src/scripts/overnight-train.ts",
    "benchmark": "npx tsx src/scripts/benchmark.ts",
    "depth-test": "npx tsx src/depth-comparison.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@russian-bank/game-engine": "*",
    "commander": "^12.0.0",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
