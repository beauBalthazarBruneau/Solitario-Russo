{
  "name": "solitario-russo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "train": "npm run train --workspace=@russian-bank/ai-training",
    "train:weekend": "npm run train:weekend --workspace=@russian-bank/ai-training",
    "train:overnight": "npm run train:overnight --workspace=@russian-bank/ai-training",
    "train:quick": "npm run train:quick --workspace=@russian-bank/ai-training",
    "train:evolve": "npm run train:evolve --workspace=@russian-bank/ai-training",
    "benchmark": "npm run benchmark --workspace=@russian-bank/ai-training",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build -w @russian-bank/game-engine && npm run build -w @russian-bank/ai-training && npm run build -w @russian-bank/web-app"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
